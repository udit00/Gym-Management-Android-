<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:longClickable="true"
    android:id="@+id/item_row_constraint_layout"
    >
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_member_guideline_vertical"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical|center_horizontal"
        tools:text="100"
        android:background="@drawable/text_view_border"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_member_guideline_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_member_roll_no"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:text="Udit Nair"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="end|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_member_guideline_vertical"
        android:id="@+id/tv_member_name"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tv_phone_number"
        tools:text="7011490531"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:gravity="end|center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_member_name"
        app:layout_constraintStart_toEndOf="@id/tv_member_roll_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>